doctype html
html(lang="ja")
  head
    include ../_component/_head
    title HONGO TECH GARAGE | 本郷テックガレージ
    link(href="https://cdn.jsdelivr.net/npm/instantsearch.js@1/dist/instantsearch.min.css" rel="stylesheet")
  body
    include ../_component/_header
    #barba-wrapper
      .barba-container

        main.page.access
          .page__ttl
            h2.en LIBRARY
            h1.jp ガレージ蔵書検索
          .group
            header.row
              div
                a.logo(href='./') ガレージ蔵書検索
              .searchbox-container
                .input-group
                  input#q.form-control(type='text')
            section
              aside
                #links
                #genres
                #ratings
              article
                #stats.text-right.text-muted
                hr
                #hits
                #pagination(style="text-align: center; margin-top: 15px; font-size: 20px;")
              div(style="text-align: right")
                | powered by
                a(href='https://www.algolia.com/' style="vertical-align: top; margin-left: 7px")
                  img(src='./algolialogo.png', height='18px')
    script(src="https://cdn.jsdelivr.net/npm/instantsearch.js@1/dist/instantsearch.min.js" type="text/javascript")
    script(src="./search.js" type="text/javascript")
  include ../_component/_footer